<div>
    <h1 class="text-2xl font-bold mb-6">Servicios</h1>
    <table class="table-auto border-collapse border border-gray-300 w-full">
        <thead>
            <tr class="bg-gray-200">
                <th class="border border-gray-300 px-4 py-2">#</th>
                <th class="border border-gray-300 px-4 py-2">Nombre</th>
                <th class="border border-gray-300 px-4 py-2">Precio</th>
                <th class="border border-gray-300 px-4 py-2">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% services.forEach((service, index) => { %>
                <tr class="hover:bg-gray-100">
                    <td class="border border-gray-300 px-4 py-2"><%= index + 1 %></td>
                    <td class="border border-gray-300 px-4 py-2"><%= service.name %></td>
                    <td class="border border-gray-300 px-4 py-2">$<%= service.price %></td>
                    <td class="border border-gray-300 px-4 py-2">
                        <a href="/services/edit/<%= service.id %>" class="text-blue-600 hover:underline">Editar</a>
                        <a href="/services/delete/<%= service.id %>" class="text-red-600 hover:underline ml-4">Eliminar</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/services/create" class="mt-4 inline-block bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">Agregar Servicio</a>
</div>
